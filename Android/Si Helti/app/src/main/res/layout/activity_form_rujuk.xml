<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HasilDiagnosaActivity"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/hasil_diagnosa_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form Rujukan"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_form_rujuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                app:cardCornerRadius="3dp"
                app:cardElevation="1dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nama Lengkap"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_form_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grandhys"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#BDBDBD"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alamat"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_form_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer euismod nulla ac fringilla facilisis. Nullam pharetra orci in velit facilisis, sed finibus mauris sagittis. Quisque nunc nunc, pharetra ac lectus non, lobortis faucibus erat. Etiam mi velit, consectetur ut lacus vehicula, malesuada sodales risus. Donec leo magna, scelerisque nec ultricies a, pellentesque sit amet lectus."
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#BDBDBD"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No HP"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_form_no_hp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gejala1\nGejala2\nGejala3\nGejala4"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#BDBDBD"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_form_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rujuk"
                        android:textColor="#F57F17"
                        android:layout_marginBottom="8dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#BDBDBD"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tanggal Rujuk"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_form_tanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer euismod nulla ac fringilla facilisis. Nullam pharetra orci in velit facilisis, sed finibus mauris sagittis. Quisque nunc nunc, pharetra ac lectus non, lobortis faucibus erat. Etiam mi velit, consectetur ut lacus vehicula, malesuada sodales risus. Donec leo magna, scelerisque nec ultricies a, pellentesque sit amet lectus."
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#BDBDBD"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rumah Sakit"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_form_rs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer euismod nulla ac fringilla facilisis. Nullam pharetra orci in velit facilisis, sed finibus mauris sagittis. Quisque nunc nunc, pharetra ac lectus non, lobortis faucibus erat. Etiam mi velit, consectetur ut lacus vehicula, malesuada sodales risus. Donec leo magna, scelerisque nec ultricies a, pellentesque sit amet lectus."
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#BDBDBD"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hasil Diagnosa Sementara"
                        android:textSize="16dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_form_diagnosa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer euismod nulla ac fringilla facilisis. Nullam pharetra orci in velit facilisis, sed finibus mauris sagittis. Quisque nunc nunc, pharetra ac lectus non, lobortis faucibus erat. Etiam mi velit, consectetur ut lacus vehicula, malesuada sodales risus. Donec leo magna, scelerisque nec ultricies a, pellentesque sit amet lectus."
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btn_submit_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_diagnosa"
                android:layout_marginTop="@dimen/activity_vertical_margin"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>