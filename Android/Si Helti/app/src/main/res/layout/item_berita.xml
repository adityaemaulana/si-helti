<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_berita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/iv_berita"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/img_berita1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_berita"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_judul_beranda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:text="4 Inspirasi Menu Berbuka Puasa yang Sehat"
                    android:layout_marginBottom="4dp"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/tv_tanggal_beranda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Sabtu, 13 April 2019"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_deskripsi_beranda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:maxLines="3"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer euismod nulla ac fringilla facilisis. Nullam pharetra orci in velit facilisis, sed finibus mauris sagittis. Quisque nunc nunc, pharetra ac lectus non, lobortis faucibus erat. Etiam mi velit, consectetur ut lacus vehicula, malesuada sodales risus."/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>